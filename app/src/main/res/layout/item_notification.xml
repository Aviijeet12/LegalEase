<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#FFFFFF"
    android:padding="14dp"
    android:layout_marginBottom="12dp"
    android:elevation="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Unread Dot -->
    <View
        android:id="@+id/unreadDot"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:background="#D4AF37"
        android:layout_alignParentStart="true"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="10dp"
        android:layout_centerVertical="true"/>

    <!-- Type Badge -->
    <TextView
        android:id="@+id/tvBadge"
        android:text="CASE"
        android:textColor="#FFFFFF"
        android:padding="6dp"
        android:textSize="10sp"
        android:layout_toEndOf="@id/unreadDot"
        android:background="#0B2F4E"
        android:layout_marginEnd="10dp"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/tvTitle"
        android:text="Notification Title"
        android:textColor="#0B2F4E"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_toEndOf="@id/tvBadge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvMessage"
        android:text="Message goes here"
        android:layout_below="@id/tvTitle"
        android:layout_toEndOf="@id/unreadDot"
        android:layout_marginTop="4dp"
        android:textColor="#555555"/>

    <TextView
        android:id="@+id/tvTime"
        android:text="10 Jan, 3:30 PM"
        android:textSize="11sp"
        android:layout_below="@id/tvMessage"
        android:layout_toEndOf="@id/unreadDot"
        android:layout_marginTop="6dp"
        android:textColor="#777777"/>

</RelativeLayout>
