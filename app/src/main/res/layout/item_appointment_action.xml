<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="14dp"
    android:background="#FFFFFF"
    android:elevation="4dp"
    android:layout_marginBottom="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:text="Appointment Title"
        android:textColor="#0B2F4E"
        android:textStyle="bold"
        android:textSize="18sp" />

    <!-- Time -->
    <TextView
        android:id="@+id/tvTime"
        android:text="10:00 AM, 10 Jan 2025"
        android:textColor="#555555"
        android:layout_marginTop="4dp" />

    <!-- Lawyer -->
    <TextView
        android:id="@+id/tvLawyer"
        android:text="Adv. Sharma"
        android:textColor="#777777"
        android:layout_marginTop="4dp" />

    <!-- Status -->
    <TextView
        android:id="@+id/tvStatus"
        android:text="Upcoming"
        android:padding="6dp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="8dp"
        android:background="#0B2F4E" />

    <!-- Row 1 Actions -->
    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnJoinCall"
            android:text="Join Call"
            android:textColor="#FFFFFF"
            android:backgroundTint="#0B2F4E"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="48dp" />

        <Button
            android:id="@+id/btnChat"
            android:text="Chat"
            android:textColor="#FFFFFF"
            android:backgroundTint="#D4AF37"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="10dp" />
    </LinearLayout>

    <!-- Row 2 Actions -->
    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnReschedule"
            android:text="Reschedule"
            android:textColor="#FFFFFF"
            android:backgroundTint="#0B2F4E"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="48dp" />

        <Button
            android:id="@+id/btnCancel"
            android:text="Cancel"
            android:textColor="#FFFFFF"
            android:backgroundTint="#F44336"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="10dp" />
    </LinearLayout>

    <!-- Document Button -->
    <Button
        android:id="@+id/btnViewDoc"
        android:text="View Document"
        android:textColor="#FFFFFF"
        android:backgroundTint="#D4AF37"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="48dp" />

</LinearLayout>
