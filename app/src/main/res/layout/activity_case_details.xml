<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#F5F5F5"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:padding="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header -->
        <LinearLayout
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:elevation="6dp"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvCaseTitle"
                android:text="Case Title"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#0B2F4E"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvCaseId"
                android:text="CASEXXXX"
                android:textColor="#555555"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvCaseStatus"
                    android:text="Open"
                    android:textColor="#FFFFFF"
                    android:background="#0B2F4E"
                    android:padding="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <View android:layout_width="8dp" android:layout_height="0dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Assigned Lawyer:"
                    android:textColor="#555555"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:id="@+id/tvAssignedLawyer"
                    android:text="Adv. A Sharma"
                    android:textStyle="bold"
                    android:textColor="#0B2F4E"
                    android:layout_marginStart="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <TextView
                android:layout_marginTop="12dp"
                android:text="Next Hearing"
                android:textColor="#555555"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvNextHearing"
                android:text="20 Jan 2025, 10:00 AM"
                android:textColor="#0B2F4E"
                android:textStyle="bold"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- Timeline -->
        <TextView
            android:text="Case Timeline"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#0B2F4E"
            android:layout_marginTop="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerTimeline"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"/>

        <!-- Documents -->
        <TextView
            android:text="Documents"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#0B2F4E"
            android:layout_marginTop="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerDocuments"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"/>

        <!-- Quick actions -->
        <LinearLayout
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4">

            <Button
                android:id="@+id/btnChat"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:text="Chat"
                android:backgroundTint="#0B2F4E"
                android:textColor="#FFFFFF"/>

            <Button
                android:id="@+id/btnVideoCall"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:text="Video"
                android:backgroundTint="#D4AF37"
                android:textColor="#FFFFFF"/>

            <Button
                android:id="@+id/btnVoiceCall"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:text="Voice"
                android:backgroundTint="#0B2F4E"
                android:textColor="#FFFFFF"/>

            <Button
                android:id="@+id/btnUploadDoc"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:text="Upload"
                android:backgroundTint="#D4AF37"
                android:textColor="#FFFFFF"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
