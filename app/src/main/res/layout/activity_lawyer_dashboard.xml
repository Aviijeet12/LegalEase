<?xml version="1.0" encoding="utf-8"?>
<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#F5F5F5"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- HEADER -->
        <TextView
            android:id="@+id/tvLawyerName"
            android:text="Adv. Lawyer Name"
            android:textColor="#0B2F4E"
            android:textSize="26sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvSpecialization"
            android:text="Lawyer Type"
            android:textColor="#777777"
            android:textSize="16sp"
            android:layout_marginBottom="20dp" />

        <!-- STATS ROW -->
        <LinearLayout
            android:orientation="horizontal"
            android:weightSum="4"
            android:layout_marginBottom="22dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include
                android:id="@+id/statCases"
                layout="@layout/dashboard_stat_card"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <include
                android:id="@+id/statClients"
                layout="@layout/dashboard_stat_card"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <include
                android:id="@+id/statEarnings"
                layout="@layout/dashboard_stat_card"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <include
                android:id="@+id/statAppointments"
                layout="@layout/dashboard_stat_card"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- ACTION CARDS -->
        <TextView
            android:text="Quick Actions"
            android:textColor="#0B2F4E"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginBottom="12dp" />

        <include
            android:id="@+id/actionAddCase"
            layout="@layout/dashboard_action_card" />

        <include
            android:id="@+id/actionMyClients"
            layout="@layout/dashboard_action_card"
            android:layout_marginTop="10dp"/>

        <include
            android:id="@+id/actionDocuments"
            layout="@layout/dashboard_action_card"
            android:layout_marginTop="10dp"/>

        <include
            android:id="@+id/actionAppointments"
            layout="@layout/dashboard_action_card"
            android:layout_marginTop="10dp"/>

        <!-- RECENT CASES -->
        <TextView
            android:text="Recent Cases"
            android:textColor="#0B2F4E"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="12dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerCases"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"/>

        <!-- UPCOMING APPOINTMENTS -->
        <TextView
            android:text="Upcoming Appointments"
            android:textColor="#0B2F4E"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="12dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerAppointments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"/>

    </LinearLayout>
</ScrollView>
