<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="16dp"
    android:elevation="3dp"
    android:layout_marginBottom="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvTitle"
        android:text="Harassment by client"
        android:textColor="#0B2F4E"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvFiledBy"
        android:text="Filed by: Adv. Ananya"
        android:textColor="#777777"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/tvCategory"
        android:text="Harassment"
        android:textColor="#D4AF37"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/tvTime"
        android:text="10:35 AM"
        android:textColor="#777777"
        android:textSize="12sp"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/tvStatus"
        android:text="Pending"
        android:padding="4dp"
        android:textSize="12sp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_status_pending"/>
</LinearLayout>
