<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/userProfileTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Profile"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

        <TextView
            android:id="@+id/lawyerDemandLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lawyer Demand: â‚¹5000"
            android:textSize="18sp"
            android:textColor="@color/teal_700"
            app:layout_constraintTop_toBottomOf="@id/userProfileTitle"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="32dp"
            android:layout_marginStart="32dp" />

        <ImageView
            android:id="@+id/paymentIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_menu_send"
            app:layout_constraintTop_toBottomOf="@id/lawyerDemandLabel"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginStart="32dp" />

        <Button
            android:id="@+id/payButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Pay Now"
            app:layout_constraintTop_toBottomOf="@id/lawyerDemandLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp" />

    <!-- Add user-specific profile fields here -->

</androidx.constraintlayout.widget.ConstraintLayout>
