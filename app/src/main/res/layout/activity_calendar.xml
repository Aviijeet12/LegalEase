<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#F5F5F5"
    android:padding="14dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Header with month nav -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#FFFFFF"
        android:elevation="6dp"
        android:padding="8dp"
        android:layout_marginBottom="10dp">

        <Button
            android:id="@+id/btnPrev"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:text="<"
            android:backgroundTint="#FFFFFF"
            android:tint="#0B2F4E"/>

        <TextView
            android:id="@+id/tvMonth"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="January 2025"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#0B2F4E"
            android:gravity="center"/>

        <Button
            android:id="@+id/btnNext"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:text=">"
            android:backgroundTint="#FFFFFF"
            android:tint="#0B2F4E"/>

        <Button
            android:id="@+id/btnAddAppointment"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:text="Add"
            android:layout_marginStart="8dp"
            android:backgroundTint="#D4AF37"
            android:textColor="#FFFFFF"/>
    </LinearLayout>

    <!-- Week header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="6dp">

        <TextView android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content" android:text="Sun" android:gravity="center" android:textColor="#777777"/>
        <TextView android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content" android:text="Mon" android:gravity="center" android:textColor="#777777"/>
        <TextView android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content" android:text="Tue" android:gravity="center" android:textColor="#777777"/>
        <TextView android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content" android:text="Wed" android:gravity="center" android:textColor="#777777"/>
        <TextView android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content" android:text="Thu" android:gravity="center" android:textColor="#777777"/>
        <TextView android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content" android:text="Fri" android:gravity="center" android:textColor="#777777"/>
        <TextView android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content" android:text="Sat" android:gravity="center" android:textColor="#777777"/>
    </LinearLayout>

    <!-- Calendar grid -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerCalendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="false" />

    <!-- Selected date header -->
    <TextView
        android:id="@+id/tvSelectedDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Appointments on yyyy-MM-dd"
        android:textColor="#0B2F4E"
        android:textStyle="bold"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="8dp"/>

    <!-- Appointment list -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerAppointments"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:nestedScrollingEnabled="false"/>

</LinearLayout>
