<?xml version="1.0" encoding="utf-8"?>
<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#F5F5F5"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Profile Photo -->
        <ImageView
            android:id="@+id/imgProfile"
            android:src="@drawable/ic_profile_placeholder"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_circle_blue"
            android:padding="16dp"
            android:layout_marginBottom="20dp" />

        <!-- Name -->
        <TextView
            android:id="@+id/tvName"
            android:text="Client Name"
            android:textColor="#0B2F4E"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_gravity="center" />

        <!-- Email -->
        <TextView
            android:id="@+id/tvEmail"
            android:text="client@mail.com"
            android:textColor="#555555"
            android:textSize="16sp"
            android:layout_marginTop="4dp"
            android:layout_gravity="center" />

        <!-- Phone -->
        <TextView
            android:id="@+id/tvPhone"
            android:text="+91 00000 00000"
            android:textColor="#555555"
            android:textSize="16sp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center" />

        <!-- Section Card -->
        <LinearLayout
            android:background="#FFFFFF"
            android:padding="16dp"
            android:elevation="6dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- KYC -->
            <TextView
                android:text="KYC Status"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#0B2F4E"/>

            <TextView
                android:id="@+id/tvKycStatus"
                android:text="Not Verified"
                android:textColor="#F44336"
                android:layout_marginTop="8dp"/>

            <Button
                android:id="@+id/btnDownloadKyc"
                android:text="Download KYC Document"
                android:backgroundTint="#D4AF37"
                android:textColor="#FFFFFF"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="48dp" />

            <Button
                android:id="@+id/btnEditProfile"
                android:text="Edit Profile"
                android:backgroundTint="#0B2F4E"
                android:textColor="#FFFFFF"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="48dp" />

            <Button
                android:id="@+id/btnChangePassword"
                android:text="Change Password"
                android:backgroundTint="#D4AF37"
                android:textColor="#FFFFFF"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="48dp" />

            <Button
                android:id="@+id/btnLogout"
                android:text="Logout"
                android:backgroundTint="#F44336"
                android:textColor="#FFFFFF"
                android:layout_marginTop="24dp"
                android:layout_width="match_parent"
                android:layout_height="48dp" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
